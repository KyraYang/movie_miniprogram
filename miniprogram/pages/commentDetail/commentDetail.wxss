/* pages/commentDetail/commentDetail.wxss */
.poster {
  position: absolute;
  top: 40rpx;
  left: 270rpx;
  width: 30%;
  z-index: 1;
}

.textWrapper
{
  margin: 20rpx 35rpx;
  margin-top: 100rpx;
  border: 1px solid gainsboro;
  background-color: white;
  z-index: 0;
  display: flex;
  flex-direction: column;
  height: 1100rpx;
  align-items: center
}

.name {
  margin-top: 300rpx;
  font-size: 22px;
  color: black;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
}
.personalInfo{
  width: 90%;
  align-content: center;
  align-items: center;
  display: flex;
  flex-direction: row;
}
.userName{
  color: rgb(99, 103, 107);
  font-size: 13px;
  margin: auto;
  margin-left: 0
}
.avatar {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  border: 2px solid white;
margin: auto;
margin-right: 5rpx
}
.commentText {
  margin: 20rpx 40rpx;
  height: 400rpx;
  font-size: 14px;
  text-align: justify;
  width: 85%
}
.commentWrapper {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  bottom: 20rpx;
  flex-direction: row;
  display: flex;
  height: 100rpx;
  width: 100%;
}
.favComment,
.editComment{
  margin: auto;
}


.recordWrapper{
  height: 260rpx
}
.recordPreview {
  display: flex;
  flex-direction: row;
  margin: 30rpx auto;
  margin-bottom: 30rpx;
  width: 40%;
  border: 1px solid rgb(152, 169, 187);
  align-content: center;
  height: 100rpx;
  border-radius: 5px;
  background-color: rgb(247, 249, 251, 0.836);
}

.duration {
  font-size: 35rpx;
  color: rgb(133, 150, 168);
  margin: auto;
  margin-left: 0;
}

.record {
  margin-top: 90rpx;
  margin-bottom: 90rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.recordPreview{
  height: 70rpx;
}
.playIcon {
  width: 50rpx;
  margin: auto;
  margin-left: 20rpx;
  margin-right: 40rpx
}