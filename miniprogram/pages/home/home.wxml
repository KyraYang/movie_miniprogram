<!--miniprogram/pages/home/home.wxml-->
<view class='filmDetail'>
  <image class="poster" src='{{filmDetail.poster}}' mode="widthFix" bindtap="onTapDetailPage" data-id="{{randomNumber}}"></image>
  <view class="name">{{filmDetail.name}}</view>
</view>
<view class="comment" bindtap="onTapCommentPage">
  <image class="avatar" src="{{comment.avatar}}" mode="widthFix"></image>
  <text class="userName">{{comment.username}}给你推荐了一部电影</text>
</view>
<view class="bottomButton">
  <view class="hotFilm" bindtap="onTapHotFilm">热门电影</view>
  <view class="personalPage" bindtap='onTapPersonal'>个人中心</view>
</view>